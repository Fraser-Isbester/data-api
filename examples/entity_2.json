{
    "$id": "https://example.com/person.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Project",
    "required": ["pk", "sk"],
    "type": "object",
    "properties": {
      "pk": {
        "type": "string",
        "key": "HASH",
        "alias": "UserID"
      },
      "sk": {
        "type": "string",
        "key": "RANGE",
        "alias": "ProjectID"
      },
      "Description": {
        "type": "string",
        "default": "A Default project description"
      }
    }
  }